<h3>スケジュール詳細</h3>

<table>
  <tr>
    <th>タイトル</th>
    <td><%= @schedule.title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @schedule.start_date %></td>
  </tr>
  <tr>
    <th>終了日</th>
    <td><%= @schedule.end_date %></td>
  </tr>
  <tr>
    <th>終日</th>
    <td><%= @schedule.all_day ? "○" : "" %></td>
  </tr>
  <tr>
    <th>メモ</th>
    <td><%= @schedule.memo %></td>
  </tr>
</table>

<div>
  <ul>
    <li><%= link_to "スケジュール管理一覧に戻る", :schedules %></li>
  </ul>
</div>